pragma solidity ^0.8.9;

interface NFT_Staking_Contract {
    function getUserBalance(address _user) external view returns (uint256);
}

contract MasterChef is Ownable, ReentrancyGuard {
    using SafeMath for uint256;
    using SafeERC20 for IERC20;

    // Info of each user.
    struct UserInfo {
        uint256 amount; // How many LP tokens the user has provided.
        uint256 rewardDebt; // Reward debt. See explanation below.
        uint256 rewardLockedUp; // Reward locked up.
        uint256 nextHarvestUntil; // When can the user harvest again.
    }

    struct UserUnstakeInfo {
        uint256 amount;
        uint256 unstake_timestamp;
        bool unstake_flag;
    }

    // Info of each pool.
    struct PoolInfo {
        IERC20 lpToken; // Address of LP token contract.
        uint256 allocPoint; // How many allocation points assigned to this pool. 888 to distribute per second.
        uint256 lastRewardTime; // Last block time that 888 distribution occurs.
        uint256 accTokenPerShare; // Accumulated 888 per share,
        uint256 harvestInterval; // Harvest interval in seconds
        uint256 totalSupply;
        uint256 adjTotalSupply;
    }

    // The 888 TOKEN!
    IERC20 public myToken;

    // 888 tokens created per second.
    uint256 public tokenPerSecond;
    // Bonus muliplier for early lion makers.
    uint256 public constant BONUS_MULTIPLIER = 1;
    // Max harvest interval: 14 days.
    uint256 public constant MAXIMUM_HARVEST_INTERVAL = 14 days;

    // Info of each pool.
    PoolInfo[] public poolInfo;
    // Info of each user that stakes LP tokens.
    mapping(uint256 => mapping(address => UserInfo)) public userInfo;
    mapping(uint256 => mapping(address => UserUnstakeInfo))
        public userUnstakeInfo;
    // Total allocation points. Must be the sum of all allocation points in all pools.
    uint256 public totalAllocPoint = 0;
    // The block time when 888 mining starts.
    uint256 public startTime;
    // Total locked up rewards
    uint256 public totalLockedUpRewards;
    uint256 public totalRewardsClaimed;

    address[] internal stakeholders;
    address public constant deadAddress = address(0xdead);
    NFT_Staking_Contract public nftStaking;

    event Deposit(address indexed user, uint256 indexed pid, uint256 amount);
    event Withdraw(address indexed user, uint256 indexed pid, uint256 amount);
    event Harvest(address indexed user, uint256 amount);
    event RewardLockedUp(
        address indexed user,
        uint256 indexed pid,
        uint256 amountLockedUp
    );

    constructor(IERC20 _mytoken, uint256 _tokenPerSecond) Ownable(msg.sender) {
        myToken = _mytoken;
        startTime = block.timestamp;
        tokenPerSecond = _tokenPerSecond;
    }

    function poolLength() external view returns (uint256) {
        return poolInfo.length;
    }

    function getStakeHoldersLength() external view returns (uint256) {
        return stakeholders.length;
    }

    modifier onlyStakingContract() {
        require(
            msg.sender == address(nftStaking),
            "only staking contract is allowed"
        );
        _;
    }

    // Add a new lp to the pool. Can only be called by the owner.
    // XXX DO NOT add the same LP token more than once. Rewards will be messed up if you do.
    function add(
        uint256 _allocPoint,
        IERC20 _lpToken,
        uint256 _harvestInterval,
        bool _withUpdate
    ) public onlyOwner {
        require(
            _harvestInterval <= MAXIMUM_HARVEST_INTERVAL,
            "add: invalid harvest interval"
        );
        if (_withUpdate) {
            massUpdatePools();
        }
        uint256 lastRewardTime = block.timestamp > startTime
            ? block.timestamp
            : startTime;
        totalAllocPoint = totalAllocPoint.add(_allocPoint);
        poolInfo.push(
            PoolInfo({
                lpToken: _lpToken,
                allocPoint: _allocPoint,
                lastRewardTime: lastRewardTime,
                accTokenPerShare: 0,
                harvestInterval: _harvestInterval,
                totalSupply: 0,
                adjTotalSupply: 0
            })
        );
    }

    // Update the given pool's 888 allocation point and deposit fee. Can only be called by the owner.
    function set(
        uint256 _pid,
        uint256 _allocPoint,
        uint256 _harvestInterval,
        bool _withUpdate
    ) public onlyOwner {
        require(
            _harvestInterval <= MAXIMUM_HARVEST_INTERVAL,
            "set: invalid harvest interval"
        );
        if (_withUpdate) {
            massUpdatePools();
        }
        totalAllocPoint = totalAllocPoint.sub(poolInfo[_pid].allocPoint).add(
            _allocPoint
        );
        poolInfo[_pid].allocPoint = _allocPoint;
        poolInfo[_pid].harvestInterval = _harvestInterval;
    }

    // Return reward multiplier over the given _from to _to block.
    function getMultiplier(
        uint256 _from,
        uint256 _to
    ) public pure returns (uint256) {
        return _to.sub(_from).mul(BONUS_MULTIPLIER);
    }

    // View function to see pending 888 on frontend.
    function pendingToken(
        uint256 _pid,
        address _user
    ) external view returns (uint256) {
        PoolInfo storage pool = poolInfo[_pid];
        UserInfo storage user = userInfo[_pid][_user];
        uint256 accTokenPerShare = pool.accTokenPerShare;
        uint256 userAmount = user.amount;
        uint256 userNftBalance = nftStaking.getUserBalance(_user);
        uint256 pending = 0;
        uint256 burnAmount = 0;
        uint256 netAmount;
        uint256 lpSupply = pool.adjTotalSupply;
        if (block.timestamp > pool.lastRewardTime && lpSupply != 0) {
            uint256 multiplier = getMultiplier(
                pool.lastRewardTime,
                block.timestamp
            );
            uint256 tokenReward = multiplier
                .mul(tokenPerSecond)
                .mul(pool.allocPoint)
                .div(totalAllocPoint);
            accTokenPerShare = accTokenPerShare.add(
                tokenReward.mul(1e12).div(lpSupply)
            );
        }

        if (userNftBalance > 0) {
            uint256 userBonus = userAmount.mul(50).div(100);
            userAmount = userAmount.add(userBonus);
        }
        pending = userAmount.mul(accTokenPerShare).div(1e12).sub(
            user.rewardDebt
        );

        if (pending > 0 || user.rewardLockedUp > 0) {
            uint256 totalRewards = pending.add(user.rewardLockedUp);

            if (userNftBalance > 0) {
                burnAmount = 0;
            } else {
                burnAmount = totalRewards.mul(20).div(100);
            }
            netAmount = totalRewards.sub(burnAmount);
        }
        return netAmount;
    }

    // View function to see if user can harvest 888.
    function canHarvest(
        uint256 _pid,
        address _user
    ) public view returns (bool) {
        UserInfo storage user = userInfo[_pid][_user];
        return block.timestamp >= user.nextHarvestUntil;
    }

    // Update reward variables for all pools. Be careful of gas spending!
    function massUpdatePools() public {
        uint256 length = poolInfo.length;
        for (uint256 pid = 0; pid < length; ++pid) {
            updatePool(pid);
        }
    }

    // Update reward variables of the given pool to be up-to-date.
    function updatePool(uint256 _pid) public {
        PoolInfo storage pool = poolInfo[_pid];
        if (block.timestamp <= pool.lastRewardTime) {
            return;
        }
        // uint256 lpSupply = pool.lpToken.balanceOf(address(this));
        uint256 lpSupply = pool.adjTotalSupply;
        if (lpSupply == 0 || pool.allocPoint == 0) {
            pool.lastRewardTime = block.timestamp;
            return;
        }
        uint256 multiplier = getMultiplier(
            pool.lastRewardTime,
            block.timestamp
        );
        uint256 tokenReward = multiplier
            .mul(tokenPerSecond)
            .mul(pool.allocPoint)
            .div(totalAllocPoint);
        // myToken.mint(address(this), tokenReward);
        pool.accTokenPerShare = pool.accTokenPerShare.add(
            tokenReward.mul(1e12).div(lpSupply)
        ); // tokenReward.mul(1e12).div(lpSupply)
        pool.lastRewardTime = block.timestamp;
    }

    // Deposit LP tokens to MasterChef for 888 allocation.
    function deposit(uint256 _pid, uint256 _amount) public nonReentrant {
        // address _referrer
        PoolInfo storage pool = poolInfo[_pid];
        UserInfo storage user = userInfo[_pid][msg.sender];
        updatePool(_pid);
        payOrLockupPendingLion(_pid, msg.sender);
        if (_amount > 0) {
            pool.lpToken.safeTransferFrom(
                address(msg.sender),
                address(this),
                _amount
            );
            if (user.amount == 0) {
                addStakeholder(msg.sender);
            }
            user.amount = user.amount.add(_amount);
            pool.totalSupply = pool.totalSupply.add(_amount);
            pool.adjTotalSupply = pool.adjTotalSupply.add(_amount);
            uint256 userNftBalance = nftStaking.getUserBalance(msg.sender);
            if (userNftBalance > 0) {
                uint256 bonus = _amount.mul(50).div(100);
                pool.adjTotalSupply = pool.adjTotalSupply.add(bonus);
            }
            emit Deposit(msg.sender, _pid, user.amount);
        }
        user.rewardDebt = user.amount.mul(pool.accTokenPerShare).div(1e12); // .div(1e12)
    }

    // function to unstake
    function unstake(uint256 _pid, uint256 _amount) public nonReentrant {
        PoolInfo storage pool = poolInfo[_pid];
        UserInfo storage user = userInfo[_pid][msg.sender];
        UserUnstakeInfo storage userUnstakeData = userUnstakeInfo[_pid][
            msg.sender
        ];

        require(user.amount >= _amount, "invalid Unstake Amount");

        updatePool(_pid);
        payOrLockupPendingLion(_pid, msg.sender);

        uint256 userAmount = user.amount;

        user.amount = user.amount.sub(_amount);
        pool.totalSupply = pool.totalSupply.sub(_amount);

        uint256 userNftBalance = nftStaking.getUserBalance(msg.sender);

        if (userNftBalance > 0) {
            uint256 bonus = userAmount.mul(50).div(100);
            pool.adjTotalSupply = pool.adjTotalSupply.sub(userAmount).sub(
                bonus
            );
            uint256 newBonus = user.amount.mul(50).div(100);
            pool.adjTotalSupply = pool.adjTotalSupply.add(user.amount).add(
                newBonus
            );
        } else {
            pool.adjTotalSupply = pool.adjTotalSupply.sub(_amount);
        }

        if (user.amount == 0) {
            removeStakeholder(msg.sender);
        }
        userUnstakeData.amount = userUnstakeData.amount.add(_amount);
        userUnstakeData.unstake_timestamp = block.timestamp;
        userUnstakeData.unstake_flag = true;
        user.rewardDebt = user.amount.mul(pool.accTokenPerShare).div(1e12); // .div(1e12)
    }

    // Withdraw LP tokens from MasterChef.
    function withdraw(uint256 _pid, uint256 _amount) public nonReentrant {
        PoolInfo storage pool = poolInfo[_pid];
        UserInfo storage user = userInfo[_pid][msg.sender];
        UserUnstakeInfo storage userUnstake = userUnstakeInfo[_pid][msg.sender];

        require(userUnstake.amount >= _amount, "withdraw: not good");
        updatePool(_pid);
        payOrLockupPendingLion(_pid, msg.sender);
        if (_amount > 0) {
            require(userUnstake.unstake_flag, "cannot withdraw");
            require(
                block.timestamp >= userUnstake.unstake_timestamp.add(600),
                "cannot withdraw"
            ); // change 600 to 7 days in production
            userUnstake.amount = userUnstake.amount.sub(_amount);
            pool.lpToken.safeTransfer(address(msg.sender), _amount);
        }

        user.rewardDebt = user.amount.mul(pool.accTokenPerShare).div(1e12); // .div(1e12)

        emit Withdraw(msg.sender, _pid, _amount);
    }

    // Pay or lockup pending 888s.
    function payOrLockupPendingLion(uint256 _pid, address _user) internal {
        PoolInfo storage pool = poolInfo[_pid];
        UserInfo storage user = userInfo[_pid][_user];

        if (user.nextHarvestUntil == 0) {
            user.nextHarvestUntil = block.timestamp.add(pool.harvestInterval);
        }
        uint256 pending = 0;

        // implement NFT logic here
        // check nft balance from nft staking contract if it is staked user will receive 50% bonus reward
        uint256 userAmount = user.amount;
        uint256 userNftBalance = nftStaking.getUserBalance(msg.sender);
        if (userNftBalance > 0) {
            uint256 userBonus = userAmount.mul(50).div(100);

            userAmount = userAmount.add(userBonus);
        }
        if (userAmount > 0) {
            pending = userAmount.mul(pool.accTokenPerShare).div(1e12).sub(
                user.rewardDebt
            ); // .div(1e12).sub(user.rewardDebt)
        }

        if (canHarvest(_pid, _user)) {
            if (pending > 0 || user.rewardLockedUp > 0) {
                uint256 totalRewards = pending.add(user.rewardLockedUp);

                // reset lockup
                totalLockedUpRewards = totalLockedUpRewards.sub(
                    user.rewardLockedUp
                );
                user.rewardLockedUp = 0;
                user.nextHarvestUntil = block.timestamp.add(
                    pool.harvestInterval
                );

                // send rewards
                safeTokenTransfer(_user, totalRewards);
                // console.log("totalRewards", totalRewards);
                emit Harvest(_user, totalRewards);
            }
        } else if (pending > 0) {
            user.rewardLockedUp = user.rewardLockedUp.add(pending);
            totalLockedUpRewards = totalLockedUpRewards.add(pending);
            emit RewardLockedUp(_user, _pid, pending);
        }
    }

    // Safe 888 transfer function, just in case if rounding error causes pool to not have enough 888.
    function safeTokenTransfer(address _to, uint256 _amount) internal {
        uint256 burnAmount = 0;
        uint256 userNftBalance = nftStaking.getUserBalance(msg.sender);
        if (userNftBalance > 0) {
            burnAmount = 0;
        } else {
            burnAmount = _amount.mul(20).div(100);
        }
        uint256 netAmount = _amount.sub(burnAmount);
        // console.log("netAmount", netAmount);
        myToken.safeTransferFrom(owner(), deadAddress, burnAmount);
        myToken.safeTransferFrom(owner(), _to, netAmount);
        totalRewardsClaimed = totalRewardsClaimed.add(netAmount);
    }

    // Pancake has to add hidden dummy pools in order to alter the emission, here we make it simple and transparent to all.
    function updateEmissionRate(uint256 _tokenPerSecond) public onlyOwner {
        massUpdatePools();
        tokenPerSecond = _tokenPerSecond;
    }

    function getTokensFromContract(uint256 _pid) public onlyOwner {
        PoolInfo storage pool = poolInfo[_pid];
        uint256 tokenBal = pool.lpToken.balanceOf(address(this));

        pool.lpToken.safeTransfer(owner(), tokenBal);
    }

    function setNFTStaking(NFT_Staking_Contract _nftStaking) public onlyOwner {
        nftStaking = _nftStaking;
    }

    function updatePoolAndRewards(
        uint256 _pid,
        address _user,
        uint256 _nftbalance,
        bool _stake
    ) external onlyStakingContract {
        PoolInfo storage pool = poolInfo[_pid];
        UserInfo storage user = userInfo[_pid][_user];
        updatePool(_pid);
        payOrLockupPendingLion(_pid, _user);

        if (user.amount > 0) {
            if (_stake) {
                if (_nftbalance == 1) {
                    uint256 bonus = user.amount.mul(50).div(100);
                    pool.adjTotalSupply = pool.adjTotalSupply.add(bonus);
                }
            } else {
                if (_nftbalance == 0) {
                    uint256 bonus = user.amount.mul(50).div(100);
                    pool.adjTotalSupply = pool.adjTotalSupply.sub(bonus);
                }
            }
        }
        user.rewardDebt = user.amount.mul(pool.accTokenPerShare).div(1e12); // .div(1e12)
    }

    function isStakeholder(
        address _address
    ) public view returns (bool, uint256) {
        for (uint256 s = 0; s < stakeholders.length; s += 1) {
            if (_address == stakeholders[s]) return (true, s);
        }
        return (false, 0);
    }

    function addStakeholder(address _stakeholder) public {
        (bool _isStakeholder, ) = isStakeholder(_stakeholder);
        if (!_isStakeholder) stakeholders.push(_stakeholder);
    }

    function removeStakeholder(address _stakeholder) public {
        (bool _isStakeholder, uint256 s) = isStakeholder(_stakeholder);
        if (_isStakeholder) {
            stakeholders[s] = stakeholders[stakeholders.length - 1];
            stakeholders.pop();
        }
    }
}
